body
    //padding: 50px
    font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
    background: #eee
	
a
    color: #0069FF
    text-decoration: none

.topic-details
    padding:5px;

.main-topic tr:nth-child(even)
    background-color:#fafafa



table
 
    border-spacing: 0px
    border: 1px solid rgb(190, 190, 190)
    background-color: #fff
    border-radius: 5px 5px 5px 0px
    width: 100%
    box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.22);
    


thead
    border-bottom: 1px solid rgb(181, 181, 181)
    color: rgb(83, 77, 75)
    font-weight: bold
    font-size: 13px
    text-shadow: 0px 1px 0px rgb(255, 255, 255)
    background-color: rgb(246, 246, 246)
    box-shadow: 0px 1px 0px rgb(255, 255, 255) inset

th
    border-bottom: 1px solid rgb(181, 181, 181)
    font-weight: bold
    font-size: 15px
    padding:3px
    text-align:left


p
    margin:0px;

th:first-child
    width:30%
    border-radius: 5px 0px 0px 0px

th:last-child
    -webkit-border-radius :0px 5px 0px 0px
    -moz-border-radius :0px 5px 0px 0px
    border-radius : 0px 5px 0px 0px

#container
    width: 950px;
    margin: 0 auto
    padding: 40px 20px
    background: #fff
    //box-shadow: 1px 3px 3px #333
    border-radius: 5px
    width:90%
    box-shadow: 0px 0px 1px rgba(0, 0, 0, 0.2), 0px 1px 0px rgba(0, 0, 0, 0.22)
    border: 1px solid rgb(185, 185, 185)

.thread-entry
   margin-bottom:10px
 
.thread-count ul 
    margin-top:4px
    margin-bottom:0px

.thread-count ul li
    width:auto
    display:inline-table
    text-align:center
    padding:0px 15px 0px 15px
    border-right: 1px solid rgb(230, 230, 230)
    line-height: 14px

.thread-count
    background:#F7F7F7
    width:790px
    height:40px
    margin-bottom:10px
    border: 1px solid rgb(185, 185, 185)
    border-radius: 4px 4px 4px 4px
    margin-left:120px
    overflow:hidden
#main
    width:100%

.ent-all
    margin-bottom:10px

#footer
    margin-top  : 10px
    width       : 98%
    background  : #ffffff
    //margin-left : 3%
    box-shadow  : 0px -4px 4px -4px rgba(0, 0, 0, 0.14) inset
    border      : 1px solid rgb(185, 185, 185)
    padding     : 10px; 

.entry-post
    display:inline-table
    width:780px
    margin-left:20px
    border: 1px solid rgb(185, 185, 185);
    border-radius: 0px 0px 4px 4px

.commenting
    margin-top:40px

.entry-user
    width:100px
    height :100px
    float:left
    text-align:center
    



.entry-comment
    background-color:#fff
    padding:0px 5px 0px 5px
    min-height:100px
    box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.07);
    //margin-top:-14px
    word-wrap: break-word
    width:780px

.coment
    padding:10px

.entry-details
    margin-bottom:0px !important
    border-radius: 0px 0px 4px 4px
    text-align:center
    height:40px
    padding-top:10px
    box-shadow: 0px -4px 4px -4px rgba(0, 0, 0, 0.14) inset;
    background-color: rgb(248, 248, 248);;
    border-top: 1px solid rgb(228, 228, 228);
    // margin-top:-14px
    word-wrap: break-word


.entry-details:hover
    background: rgb(250, 250, 250)
    
    transition: background .4s ease-out .2s;
    -moz-transition: background .2s ease-out .0s;
    -webkit-transition: background .2s ease-out;
    -o-transition: background .2s ease-out;


#logo
    text-align: center

#display
    width:950px;
    margin: 0 auto

#userbar
    margin-bottom: 10px

/* Profile*/

.profile-avatar
    border: 1px solid rgb(185, 185, 185)
    border-radius: 5px 5px 5px 5px
    float:left
    height:50px

